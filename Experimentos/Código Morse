const int TAMANHO = 200;
const int CURTO = 200;
const int LONGO = 700;
const int DELAY = 500;
const int buzzer = 11;


char texto[TAMANHO] = "sos";

void setup() {
  // put your setup code here, to run once:
  pinMode (buzzer, OUTPUT);

  for (int i = 0; i < strlen(texto); i++){

    morse(texto[i]);
    delay(500);
  }

  
}

void ponto (){

    digitalWrite(buzzer, HIGH);
    delay (CURTO);
    digitalWrite(buzzer, LOW);
    delay (DELAY);
  
}

void traco(){

    digitalWrite(buzzer, HIGH);
    delay (LONGO);
    digitalWrite(buzzer, LOW);
    delay (DELAY);
  
}
  

